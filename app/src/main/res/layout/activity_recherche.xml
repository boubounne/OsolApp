<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentSecure">


    <EditText
        android:id="@+id/user5"
        android:layout_width="258dp"
        android:layout_height="34dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp"
        android:background="@drawable/border"
        android:hint="@string/User"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="476dp" />

    <EditText
        android:id="@+id/password5"
        android:layout_width="258dp"
        android:layout_height="34dp"
        android:layout_below="@id/user5"
        android:layout_alignLeft="@id/user5"
        android:layout_alignRight="@id/user5"
        android:layout_centerInParent="true"
        android:layout_marginTop="39dp"
        android:background="@drawable/border"
        android:hint="@string/password"
        android:inputType="textPassword"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="536dp" />

    <Button
        android:id="@+id/bt"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_below="@id/password5"
        android:layout_alignLeft="@id/password5"
        android:layout_alignRight="@id/password5"
        android:layout_marginTop="237dp"
        android:text="@string/button_val" />


</RelativeLayout>